!!! 5
html(lang="en")
  head
    include head.jade
    title Einstellungen

  body
    - var nav = 'settings'
    include nav.jade

    .container(style='padding-top: 80px;')
        form
          h3 Briefkopf
          .form-group.row
            label(for='name').col-sm-2.form-control-label Ihr Name 
            .col-sm-8
              input(name='name' autofocus).form-control

          .form-group.row
            label(for='street').col-sm-2.form-control-label Ihre Straße 
            .col-sm-8
              input(name='street').form-control

          .form-group.row
            label(for='city').col-sm-2.form-control-label Ihr Ort 
            .col-sm-8
              input(name='city').form-control


          h3 Fußzeile
          .form-group.row
            label(for='phone').col-sm-2.form-control-label Ihre Telefonnummer
            .col-sm-8
              input(name='phone').form-control

          .form-group.row
            label(for='fax').col-sm-2.form-control-label Ihre Faxnummer
            .col-sm-8
              input(name='fax').form-control

          .form-group.row
            label(for='email').col-sm-2.form-control-label Ihre E-Mail-Adresse
            .col-sm-8
              input(name='email').form-control

          .form-group.row
            label(for='bank').col-sm-2.form-control-label Ihr Bankname
            .col-sm-8
              input(name='bank').form-control

          .form-group.row
            label(for='blz').col-sm-2.form-control-label Ihre BLZ
            .col-sm-8
              input(name='blz').form-control

          .form-group.row
            label(for='account').col-sm-2.form-control-label Ihre Kontonummer
            .col-sm-8
              input(name='account').form-control


          h3 Sonstiges
          .form-group.row
            label(for='retour_address').col-sm-2.form-control-label Retour-Adresse 
            .col-sm-8
              input(name='retour_address').form-control

          .form-group.row
            label(for='greeting').col-sm-2.form-control-label Grußwort
            .col-sm-8
              input(name='greeting').form-control

          .form-group.row
            label(for='signature').col-sm-2.form-control-label Ihre Unterschrift 
            .col-sm-8
              input(name='signature').form-control


          .form-group.row
            .col-sm-offset-2.col-sm-8
              a.btn.btn-primary(href='settings.html')#save Speichern

    include foot.jade
    script(src='../settings.js')

